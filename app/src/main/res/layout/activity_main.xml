<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.yanxin.arcbutton.library.ArcButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@null"
        android:text="啦啦啦"
        app:leftBottomRadius="20dp"
        app:leftTopRadius="20dp"
        app:rightBottomRadius="20dp"
        app:rightTopRadius="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="左边"
            app:backgroundColor="@android:color/holo_purple"
            app:leftBottomRadius="20dp"
            app:leftTopRadius="20dp"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="中间"
            app:backgroundColor="@android:color/holo_green_dark"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="右边"
            app:backgroundColor="@android:color/holo_orange_dark"
            app:rightBottomRadius="20dp"
            app:rightTopRadius="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="左边"
            app:backgroundColor="@android:color/holo_green_dark"
            app:leftBottomRadius="10dp"
            app:leftTopRadius="10dp"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="中间"
            app:backgroundColor="@android:color/holo_blue_light"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="右边"
            app:backgroundColor="@android:color/holo_red_light"
            app:rightBottomRadius="10dp"
            app:rightTopRadius="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="上边"
            app:backgroundColor="@android:color/holo_purple"
            app:leftTopRadius="10dp"
            app:rightTopRadius="10dp"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="中间"
            app:backgroundColor="@android:color/holo_green_dark"/>

        <com.yanxin.arcbutton.library.ArcButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:text="下边"
            app:backgroundColor="@android:color/holo_orange_dark"
            app:leftBottomRadius="10dp"
            app:rightBottomRadius="10dp"/>

    </LinearLayout>

</LinearLayout>
